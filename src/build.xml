<project name="JavaProject" basedir="." default="run">
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="build"/>

    <!-- Target to compile the Java code -->
    <target name="compile">
        <mkdir dir="${build.dir}"/>
        <javac srcdir="${src.dir}" destdir="${build.dir}"/>
    </target>

    <!-- Target to run the Java program -->
    <target name="run" depends="compile">
        <java classname="MainClass" classpath="${build.dir}">
            <arg value="arg1"/>
        </java>
    </target>
</project>
